---
// src/layouts/Layout.astro
import '../styles/globals.css';
import Navbar from '@/components/molecules/Navbar.astro';
import { generateMeta } from '@/utils/seo';

const {
  siteName = 'My Portfolio', 
  pageTitle, 
  class: className = '',
  description = 'KWSTYK Portfolio のポートフォリオサイトです。',
  pathname = '',
  ogImage = '/api/og?title=' + encodeURIComponent(pageTitle ?? siteName),
} = Astro.props as {
  siteName?: string;
  pageTitle?: string;
  class?: string;
  description?: string;
  pathname?: string;
  ogImage?: string;
};

const seo = generateMeta({
  title: pageTitle ?? siteName,
  description,
  pathname,
  imagePath: ogImage,
});
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{seo.title}</title>
  <meta name="description" content={seo.description} />

  <!-- Open Graph -->
  <meta property="og:type"        content="website" />
  <meta property="og:site_name"   content={siteName} />
  <meta property="og:title"       content={seo.title} />
  <meta property="og:description" content={seo.description} />
  <meta property="og:url"         content={seo.url} />
  <meta property="og:image"       content={seo.image} />
  <meta name="twitter:card"       content="summary_large_image" />
</head>
<body class="bg-bg-start text-text flex flex-col min-h-screen">
  
  <!-- ヘッダー -->
  <header class="sticky top-0 z-50 bg-bg-mid/90 backdrop-blur border-b border-border">
    <div class="max-w-7xl mx-auto flex items-center justify-between px-4 sm:px-6 md:px-8 py-4">
      <Navbar />
    </div>
  </header>
<script type="module" is:inline>
  import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
  mermaid.initialize({ startOnLoad: true, theme: 'neutral' });
</script>
  <!-- ページ固有コンテンツ -->
  <!-- 全幅 w-full → 最大幅 max-w-4xl → 中央寄せ mx-auto -->
  <main
    class:list={[
      'flex-1',
      'w-full',        // ビューポート幅いっぱい（小画面用）
      'max-w-4xl',     // 最大幅を 4xl に制限
      'mx-auto',       // 左右自動マージンで中央寄せ
      'px-4',          // 小画面時の左右パディング
      'sm:px-6',       // sm 以上で左右パディングを増やす
      'md:px-8',       // md 以上でさらにパディングを増やす
      'py-8',
      className
    ]}
  >
 <slot />
  </main>

  {Astro.slots.has('footer') && (
    <footer class="border-t border-border bg-bg-start">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 md:px-8 py-8">
        <slot name="footer" />
      </div>
    </footer>
  )}
  <!-- Mermaid をクライアントで初期化 -->
  <script type="module" is:inline>
    import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
    mermaid.initialize({
      startOnLoad: true,
      theme: 'neutral',
      securityLevel: 'loose'
    });
  </script>
</body>
</html>
