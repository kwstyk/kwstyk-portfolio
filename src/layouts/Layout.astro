---
// src/layouts/Layout.astro
import '../styles/globals.css';
import Navbar from '@/components/molecules/Navbar.astro';
import { generateSeo  } from '@/utils/seo';

const {
  siteName = 'My Portfolio', 
  pageTitle, 
  class: className = '',
  description = 'KWSTYK Portfolio のポートフォリオサイトです。',
  pathname = '',
  ogImage = '/api/og?title=' + encodeURIComponent(pageTitle ?? siteName),
} = Astro.props as {
  siteName?: string;
  pageTitle?: string;
  class?: string;
  description?: string;
  pathname?: string;
  ogImage?: string;
};

// generateSeo を使ってフルタイトル／デフォルト description／OGP URL を補完
const seo = generateSeo({
  title:       pageTitle ?? siteName,
  description,              // ページごとの説明 or デフォルトにフォールバック
  pathname,                 // 例: '/proof'
  imagePath: ogImage,       // 例: '/api/og?title=Landing'
});
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{seo.title}</title>
  <meta name="description" content={seo.description} />

  <!-- Open Graph -->
  <meta property="og:type"        content="website" />
  <meta property="og:site_name"   content={siteName} />
  <meta property="og:title"       content={seo.title} />
  <meta property="og:description" content={seo.description} />
  <meta property="og:url"         content={seo.url} />
  <meta property="og:image"       content={seo.image} />
  <meta name="twitter:card"       content="summary_large_image" />
</head>
<body class="bg-bg-start text-text flex flex-col min-h-screen">
  
    <!-- ヘッダー -->
    <header class="sticky top-0 z-50 bg-bg-mid/90 backdrop-blur border-b border-border">
      <div class="max-w-7xl mx-auto flex items-center justify-between px-4 sm:px-6 md:px-8 py-4">
        <Navbar />
      </div>
    </header>

    <!-- Mermaid.js 初期化スクリプト -->
    <script type="module" is:inline>
      import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
      mermaid.initialize({ startOnLoad: true, theme: 'neutral', securityLevel: 'loose' });
    </script>

    <!-- ページ固有コンテンツ -->
    <main
      class:list={[
        'flex-1',
        'w-full',
        'max-w-4xl',
        'mx-auto',
        'px-4',
        'sm:px-6',
        'md:px-8',
        'py-8',
        className
      ]}
    >
      <slot />
    </main>

    <!-- フッターをスロットで分岐 -->
    {Astro.slots.has('footer') && (
      <footer class="border-t border-border bg-bg-start">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 md:px-8 py-8">
          <slot name="footer" />
        </div>
      </footer>
    )}
  </body>
</html>