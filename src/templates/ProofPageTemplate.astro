---
import Layout     from '@/components/organisms/Layout.astro'
import ProofHero  from '@/components/organisms/ProofHero.astro'

interface Props {
  title: string
  difficulty: 'easy'|'medium'|'hard'|'expert'
  repro: ('docker'|'terraform'|'vagrant'|'manual')[]
  stack: string[]
  updated: string
  tags: string[]
  ci_status?: string
  class?: string
}

const {
  title, difficulty, repro, stack,
  updated, tags, ci_status,
  class: className
} = Astro.props as Props
---

<Layout class={className}>
  <ProofHero
    title={title}
    difficulty={difficulty}
    repro={repro}
    stack={stack}
    updated={updated}
    ci_status={ci_status ?? ''}
  />

  <article class="prose prose-invert max-w-none mt-10">
    <slot />
  </article>
</Layout>
