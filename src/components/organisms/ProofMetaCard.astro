---
interface Props { updated: string; tags?: string[] }
const { updated, tags = [] } = Astro.props as Props;
---
<div class="flex flex-wrap items-center justify-between gap-4
            rounded bg-slate-800/40 px-4 py-2 text-sm">
  <span class="inline-flex items-center gap-1 text-slate-300">
    <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="1.5"
      viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
    Updated: {updated}
  </span>
  {tags.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tags.map(t => (
        <span class="rounded-full bg-slate-700 px-2 py-1 text-xs">#{t}</span>
      ))}
    </div>
  )}
</div>
