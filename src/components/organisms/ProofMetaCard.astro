---
interface Props { updated: string; tags?: string[] }
const { updated, tags = [] } = Astro.props as Props;
---
<div class="max-w-4xl mx-auto flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 px-4 py-2 text-sm text-slate-300 bg-slate-800/30 rounded-md shadow-inner">
  <div class="flex items-center gap-2">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-slate-400">
      <circle cx="12" cy="12" r="10" />
      <polyline points="12 6 12 12 16 14" />
    </svg>
    <span>Updated: {updated}</span>
  </div>
  {tags.length > 0 && (
    <div class="flex flex-wrap items-center gap-2 justify-center sm:justify-end">
      {tags.map(tag => (
        <span class="inline-block text-xs px-2 py-1 rounded-full bg-slate-700 text-white font-semibold">
          #{tag}
        </span>
      ))}
    </div>
  )}
</div>
