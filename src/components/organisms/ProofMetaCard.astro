---
// src/components/organisms/ProofMetaCard.astro
interface Props {
  updated: string;
  tags?: string[];
}
const { updated, tags = [] } = Astro.props as Props;
---
<div class="bg-slate-800/50 rounded-lg p-6 space-y-4 text-sm">
  <div class="flex items-center gap-2">
    <!-- Heroicons Clock Icon -->
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6 text-accent"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M12 8v4l2 2m6-2a9 9 0 11-18 0 9 9 0 0118 0z"
      />
    </svg>
    <span>Updated: {updated}</span>
  </div>
  {tags.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tags.map((t) => (
        <span class="bg-slate-700 text-xs rounded-full px-2 py-1">
          #{t}
        </span>
      ))}
    </div>
  )}
</div>
