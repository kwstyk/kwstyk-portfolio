---
const categories = [
  {
    label: "フレームワーク",
    items: [
      { name: "Astro", icon: "/icons/astro.svg", level: 4 },
      { name: "Vite", icon: "/icons/vite.svg", level: 3 },
    ]
  },
  {
    label: "スタイリング",
    items: [
      { name: "Tailwind CSS", icon: "/icons/tailwindcss.svg", level: 4 },
    ]
  },
  {
    label: "開発言語・環境",
    items: [
      { name: "TypeScript", icon: "/icons/typescript.svg", level: 3 },
      { name: "Docker", icon: "/icons/docker.png", level: 4 },
    ]
  },
  {
    label: "コード管理",
    items: [
      { name: "GitHub", icon: "/icons/github.svg", level: 5 },
    ]
  },
  {
    label: "執筆・学習",
    items: [
      { name: "Zenn", icon: "/icons/zenn.png", level: 4 },
      { name: "Note", icon: "/icons/note.svg", level: 3 },
      { name: "TryHackMe", icon: "/icons/tryhackme.svg", level: 2 },
    ]
  }
];
---

<section class="techstack-section py-12 max-w-3xl mx-auto px-4 sm:px-0">
  <div class="space-y-8">
    {categories.map(category => (
      <div>
        <!-- カテゴリ名 -->
        <h3 class="text-base sm:text-lg font-bold text-left text-[var(--accent)] mb-4 tracking-wide">
          {category.label}
        </h3>

        <!-- 技術一覧 -->
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
          {category.items.map(tool => (
            <div class="flex flex-col items-start">
              <img
                src={tool.icon}
                alt={tool.name}
                class="w-10 h-10 transition-transform duration-200 hover:scale-105"
              />
              <span class="text-sm font-mono mt-2 text-left">{tool.name}</span>
              <div class="text-xs text-yellow-400 mt-1 font-mono">
                {'★'.repeat(tool.level || 0).padEnd(5, '☆')}
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
