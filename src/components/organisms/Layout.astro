---
import '@/styles/theme.css';
import Navbar from '@/components/molecules/Navbar.astro';

interface Props {
  class?: string;
}

const { 
  class: className,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Astro Portfolio</title>
    <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <header class="sticky top-0 z-50 border-b border-border bg-surface-0/80 backdrop-blur">
        <Navbar />
      </header>
      
      <main class:list={['flex-1 container mx-auto px-4 py-8', className]}>
        <slot />
      </main>

      {Astro.slots.has('footer') && (
        <footer class="border-t border-border bg-surface-0">
          <div class="container mx-auto px-4 py-8">
            <slot name="footer" />
          </div>
        </footer>
      )}
    </div>
  </body>
</html>
