---
// src/components/molecules/SmallProofCard.astro
// 小カード用にデザイン調整

interface Props {
  title:      string;
  href:       string;
  updated?:   string;
  difficulty?: string;
  class?:     string;
}
const { title, href, updated, difficulty, class: className = '' } = Astro.props as Props;
---
<a
  href={href}
  class={[
    'card-base',        // 共通の背景・ボーダー・影・角丸
    'w-full',           // グリッドに合わせて幅いっぱい
    'min-w-[12rem]',    // これ以上小さくならない
    'h-48',             // 高さ揃え (12rem)
    'flex flex-col',    // 縦に並べる
    'p-6',              // 内側余白
    className,
  ].join(' ')}
>
  <!-- タイトル -->
  <h4 class="text-lg font-bold text-white truncate mb-3">
    {title}
  </h4>

  <!-- メタ情報を下寄せ -->
  <div class="mt-auto space-y-1 text-sm">
   {difficulty && (
     <div class="text-indigo-300">
       難易度: <span class="font-medium text-white">{difficulty}</span>
     </div>
   )}
   {updated && (
     <div class="text-gray-400">
       更新: <span class="font-medium text-gray-200">{new Date(updated).toLocaleDateString('ja-JP')}</span>
     </div>
   )}
  </div>
</a>
