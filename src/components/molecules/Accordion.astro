---
interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<div class:list={['border rounded-lg overflow-hidden', className]}>
  <button class="w-full p-4 text-left bg-surface-1 hover:bg-surface-1/80">
    {title}
  </button>
  <div class="p-4 bg-surface-0">
    <slot />
  </div>
</div> 