---
interface Props { code: string; lang?: string }
const { code, lang = "bash" } = Astro.props as Props;
---
<div class="relative">
  <button
    type="button"
   onclick={`navigator.clipboard.writeText(${JSON.stringify(code)})`}
    class="px-2 py-1 rounded bg-gray-700 hover:bg-gray-600 text-white text-xs"
  >
    class="px-2 py-1 rounded bg-gray-700 hover:bg-gray-600 text-white text-xs"
    Copy
  </button>
  <pre class="overflow-x-auto rounded bg-slate-800 p-4 text-sm">
    <code class={`language-${lang}`}>{code}</code>
  </pre>
</div>
