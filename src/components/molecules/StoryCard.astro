---
// StoryCard.astro
interface Props {
  title: string;
  summary: string;
  url: string;
  source: string;
  published: string;
  tags?: string[];
}
const { title, summary, url, source, published,tags = [] } = Astro.props as Props;
const colorMap: Record<string,string> = {
   zenn:  'bg-sky-500',
   note:  'bg-yellow-500',
};
---
<a href={url} target="_blank" class="block p-4 border rounded-lg hover:shadow-lg">
  <div class={`inline-block px-2 py-1 text-xs text-white ${colorMap[source] ?? 'bg-gray-500'}`}>
    {source}
  </div>
  <h3 class="mt-2 font-bold">{title}</h3>
  <p class="text-sm opacity-80">{summary}</p>
  <p class="text-xs mt-2">Published: {published}</p>
      {tags.map(tag => (
          <span class="text-xs bg-gray-200 text-gray-800 px-2 py-0.5 rounded-full">{tag}</span>
        ))}
</a>
