<script is:inline>
  // 二重ヘッダーがあったら 2 個め以降を削除
  document.addEventListener('DOMContentLoaded', () => {
    const headers = document.querySelectorAll('.site-header');
    headers.forEach((el, idx) => {
      if (idx > 0) el.remove();
    });
  });
</script>
