---
// ファイル: src/components/atoms/Badge.astro
interface Props {
  type?: 'info'|'warn'|'error'|'easy'|'medium'|'hard'|'expert'
  class?: string;
}
const { type = 'info', class: extraClass = '' } = Astro.props as Props;

// info/warn/error と easy/medium/hard/expert を同一コンポーネントで扱う
const colorMap: Record<string,string> = {
  // alert
  info:   'bg-blue-800 border-blue-500',
  warn:   'bg-yellow-800 border-yellow-500',
  error:  'bg-red-800 border-red-500',
  // difficulty
  easy:   'bg-green-600 text-white',
  medium: 'bg-yellow-600 text-black',
  hard:   'bg-orange-600 text-white',
  expert: 'bg-red-600 text-white',
}
const color = colorMap[type] || colorMap['info']
---

<div class={`inline-block px-2 py-1 text-xs font-medium rounded border ${color} ${extraClass}`}>
  <slot/>
</div>
