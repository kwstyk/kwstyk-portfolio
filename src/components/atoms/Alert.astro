---
// src/components/atoms/Alert.astro
interface Props {
  type?: 'info'|'warn'|'error'
}
const { type='info' } = Astro.props
---

<div class:list={[
  'rounded-md p-4 mb-6',
  { 'bg-blue-100 text-blue-800': type==='info',
    'bg-yellow-100 text-yellow-800': type==='warn',
    'bg-red-100 text-red-800': type==='error' }
]}>
  <slot/>
</div>
