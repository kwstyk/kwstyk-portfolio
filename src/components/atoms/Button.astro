---
import '../../styles/button.css'; 


interface Props {
  variant?: 'primary' | 'ghost';
  href?: string;
  class?: string;
  type?: 'button' | 'submit' | 'reset';
}

const {
  variant = 'primary',
  href,
  class: className,
  type = 'button',
} = Astro.props;

/*const styles = {
  base: 'inline-flex items-center justify-center px-4 py-2 rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-accent-0',
  primary: 'bg-accent-0 hover:bg-accent-1 text-text-0',
  ghost: 'border border-border hover:bg-surface-1 text-text-0'
}; */
---

{href ? (
  <a
    href={href}
    class:list={[
      'button',
      { ghost: variant === 'ghost' },
      className
    ]}
  >
    <slot />
  </a>
) : (
  <button
    type={type}
    class:list={[
      'button',
      { ghost: variant === 'ghost' },
      className
    ]}
  >
    <slot />
  </button>
)}
