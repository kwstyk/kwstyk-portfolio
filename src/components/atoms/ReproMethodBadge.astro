---
// src/components/atoms/ReproMethodBadge.astro

interface Props {
  /** 再現方法のキー (docker|terraform|vagrant|manual) */
  method?: 'docker' | 'terraform' | 'vagrant' | 'manual';
}
const { method = '' } = Astro.props as Props;

// バッジごとの背景色マッピング
const badgeColorMap: Record<string, string> = {
  docker:    'bg-blue-600',
  terraform: 'bg-green-600',
  vagrant:   'bg-purple-600',
  manual:    'bg-gray-600',
};
// マッピングにない場合のデフォルト
const badgeClass = badgeColorMap[method] ?? 'bg-gray-600';
---

<span class={`inline-block px-2 py-1 ${badgeClass} text-white rounded-full text-xs`}>
  {method}
</span>
