{
  "extends": "astro/tsconfigs/strict",
  "include": ["src", ".astro/types.d.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    // JSX は使わないので特別な設定は不要ですが、
    // 万一 JSX を残す場合はこの２行を入れておくと安心です:
    "jsx": "react-jsx",
    "jsxImportSource": "@vercel/og",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["astro/client", "node"]
  }
}
