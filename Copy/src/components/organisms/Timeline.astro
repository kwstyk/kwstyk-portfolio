---
import { timeline, type TimelineItem } from '@/data/timeline.ts'
---

<section>
  <div class="card-base w-full p-8 flex flex-col gap-6">
    <h2 class="text-2xl font-bold text-[var(--accent)]">Career Timeline</h2>

    <div class="relative border-l-2 border-gray-700 pl-10 space-y-8">
      {timeline.map((item: TimelineItem) => (
        <div class="relative">
          <span
            class="
              absolute
              left-0 top-1/2
              transform -translate-x-1/2 -translate-y-1/2
              w-10 h-10
              bg-[var(--accent)]
              rounded-full
              flex items-center justify-center
              text-white text-sm font-semibold
              border-2 border-[var(--card-bg)]
              z-10
            "
          >
            {item.year}
          </span>
          <div class="ml-6">
            <h3 class="text-lg font-semibold text-white">{item.title}</h3>
            <p class="text-gray-300 mt-1">{item.details}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
