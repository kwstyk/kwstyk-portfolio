---
// src/components/organisms/ContactSection.astro
interface Props {
  email:   string
  socials?: { href: string; icon: string; label: string }[]
}
const { email, socials = [] } = Astro.props as Props
---
<!-- ★ card-base を取る：親の AboutCard が持っているため -->
<div class="space-y-4">
  <p class="text-base text-gray-200">
    お気軽にご連絡ください。
  </p>

  <!-- メール -->
  <a
    href={`mailto:${email}`}
    class="inline-block bg-accent text-white font-medium px-6 py-3 rounded hover:opacity-90"
  >
    📧 メールを送る
  </a>

  <!-- SNS -->
  {socials.length > 0 && (
    <div class="flex gap-4">
      {socials.map(s => (
        <a href={s.href} target="_blank" rel="noopener" aria-label={s.label}>
          <img src={s.icon} alt={s.label} class="w-6 h-6 transition-transform duration-200 hover:scale-125" />

        </a>
      ))}
    </div>
  )}
</div>
